{
  "compilerOptions": {
    "target": "ES2022",                                  
    "module": "ESNext",
    "moduleResolution": "Node",                               
    "rootDir": ".",                                 
    "baseUrl": ".",                                  
    "outDir": "./dist",                   
    "paths": {
      "@/*": ["src/*"]
    },               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "strictNullChecks": true,                         
    "skipLibCheck": true,                      
    "types": ["vitest/globals"]
  }
}
